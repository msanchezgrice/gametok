{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gametok/game-sdk": ["packages/game-sdk/src"],
      "@gametok/types": ["packages/types/src"],
      "@gametok/game-shell": ["packages/game-shell/src"]
    }
  }
}
