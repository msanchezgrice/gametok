{
  "name": "gametok",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup": "npm install",
    "dev": "npm run dev --workspace @gametok/web",
    "build": "npm run build --workspace @gametok/web",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspace @gametok/web",
    "test": "npm run test --workspaces --if-present",
    "format": "npm run lint --workspace @gametok/web -- --fix",
    "seed": "node scripts/seed.mjs"
  }
}
